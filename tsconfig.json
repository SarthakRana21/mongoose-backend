{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "outDir": "dist", 
    "rootDir": "src", 
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}