{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "CommonJS", 
    "moduleResolution": "node",
    "outDir": "dist", 
    "rootDir": "src", 
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "**/*"],
  "exclude": ["node_modules", "dist"] 
}